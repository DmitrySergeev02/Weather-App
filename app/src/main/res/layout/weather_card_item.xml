<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="306dp"
    android:layout_height="218dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@android:color/transparent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:clipToOutline="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            >

            <TextView
                android:id="@+id/rain_chance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/white"
                android:textAppearance="@style/Body2"
                tools:text="Chance of rain 60%"
                />

            <TextView
                android:id="@+id/weather_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/rain_chance"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/Headline5"
                tools:text="Partly Cloudy"
           />
            
            <ImageView
                android:id="@+id/weather_status_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/mcloudy"
                />

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weather_status"
                android:src="@drawable/ic_round_location_on"
                />


            <TextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/weather_status"
                app:layout_constraintStart_toEndOf="@id/location_icon"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textAppearance="@style/Body2"
                tools:text="Washington DC, USA"/>

            <ImageView
                android:id="@+id/rain_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location_icon"
                android:src="@drawable/rain"
                />

            <TextView
                android:id="@+id/precipitation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/location_icon"
                app:layout_constraintStart_toEndOf="@id/rain_icon"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textAppearance="@style/Body2"
                tools:text="No precipitation for at least 120 min"/>

            <TextView
                android:id="@+id/current_weather_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rain_icon"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/Headline5"
                tools:text="26"/>

            <TextView
                android:id="@+id/celsius_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rain_icon"
                app:layout_constraintStart_toEndOf="@+id/current_weather_degree"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textAppearance="@style/Medium"
                android:text="@string/celsius_sign"/>

            <ImageView
                android:id="@+id/caret_up"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="@id/current_weather_degree"
                app:layout_constraintStart_toEndOf="@+id/celsius_sign"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/caret_up"/>

            <TextView
                android:id="@+id/max_degree_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/caret_up"
                app:layout_constraintStart_toEndOf="@+id/caret_up"
                android:layout_marginStart="3dp"
                android:textColor="@color/white"
                android:textAppearance="@style/Body2_std"
                tools:text="34°C" />

            <ImageView
                android:id="@+id/caret_down"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="@+id/caret_up"
                app:layout_constraintStart_toEndOf="@id/max_degree_text"
                android:layout_marginStart="10dp"
                android:src="@drawable/caret_down"/>

            <TextView
                android:id="@+id/min_degree_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/caret_down"
                app:layout_constraintStart_toEndOf="@+id/caret_down"
                android:layout_marginStart="3dp"
                android:textColor="@color/white"
                android:textAppearance="@style/Body2_std"
                tools:text="20°C" />

            <TextView
                android:id="@+id/feels_like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/min_degree_text"
                app:layout_constraintStart_toEndOf="@+id/min_degree_text"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textAppearance="@style/Body3"
                tools:text="Feels like 20°C" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>