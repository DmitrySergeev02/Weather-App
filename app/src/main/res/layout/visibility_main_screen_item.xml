<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        >

        <TextView
            android:id="@+id/visibility_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/visibility"
            android:textColor="@color/main_screen_item_color"
            android:textAppearance="@style/Body3_std"
            />

        <ImageView
            android:id="@+id/info_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/circle_information"/>

        <TextView
            android:id="@+id/visibility_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/info_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/Headline4_medium"
            tools:text="10 Km"/>

        <ImageView
            android:id="@+id/visibility_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toBottomOf="@+id/visibility_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:src="@drawable/eye_alt"/>

        <TextView
            android:id="@+id/visibility_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Medium"
            app:layout_constraintStart_toEndOf="@id/visibility_icon"
            app:layout_constraintTop_toTopOf="@id/visibility_icon"
            app:layout_constraintEnd_toStartOf="@id/visibility_value"
            android:layout_marginStart="10dp"
            tools:text="Poor visibility, vision's not clear"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>