<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        >

        <TextView
            android:id="@+id/air_quality_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/air_quality"
            android:textColor="@color/main_screen_item_color"
            android:textAppearance="@style/Body3_std"
            />

        <TextView
            android:id="@+id/pm25_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/air_quality_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/Headline4"
            android:textColor="@color/yellow"
            android:text="93"
            />

        <TextView
            android:id="@+id/level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/pm25_text"
            app:layout_constraintStart_toEndOf="@id/pm25_text"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/Body3"
            android:textColor="@color/my_black"
            android:text="Moderate"
            />

        <TextView
            android:id="@+id/level_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/level_text"
            app:layout_constraintStart_toStartOf="@+id/level_text"
            app:layout_constraintEnd_toStartOf="@id/help_button"
            android:layout_marginEnd="10dp"
            android:textAppearance="@style/Body4_italic_light"
            android:textColor="@color/main_screen_item_color"
            android:text="Air quality is considered satisfactory, and air pollution poses little or no risk"/>

        <ImageView
            android:id="@+id/help_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@id/pm25_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/circle_information"
            />

        <com.dmitrysergeev.weatherapp.presentation.mainscreen.airquality.AirQualityProgressBar
            android:id="@+id/air_quality_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="56"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pm25_text" />

        <include
            android:id="@+id/pm25"
            layout="@layout/air_quality_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/air_quality_progress_bar"
            />

        <include
            android:id="@+id/pm10"
            layout="@layout/air_quality_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/o3"
            app:layout_constraintStart_toEndOf="@+id/pm25"
            app:layout_constraintTop_toBottomOf="@+id/air_quality_progress_bar"
            />

        <include
            android:id="@+id/o3"
            layout="@layout/air_quality_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/air_quality_progress_bar"
            />

        <include
            android:id="@+id/so2"
            layout="@layout/air_quality_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pm25"
            />

        <include
            android:id="@+id/co"
            layout="@layout/air_quality_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/so2"
            />

        <include
            android:id="@+id/no2"
            layout="@layout/air_quality_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/so2"
            app:layout_constraintEnd_toStartOf="@id/co"
            app:layout_constraintTop_toTopOf="@+id/so2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>